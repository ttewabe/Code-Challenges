</ul>

<Script>
const firstNamesArray = ['Violet', 'Charlie', 'Veruca', 'Mike', 'Augustus'];
const lastNamesArray = ['Beauregarde', 'Bucket', 'Salt', 'Teavee', 'Gloop'];




for (let i = 0; i < firstNamesArray.length; i++) {
  console.log(firstNamesArray[i] + ' ' + lastNamesArray[i]); 
}
</script>


